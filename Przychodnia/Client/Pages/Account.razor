@page "/account"
@using Przychodnia.Shared

<h3>Konto</h3>

<div class="row my-5">
        <div class="col-lg-6 col-xl-4 offset-lg-3 offset-xl-4">
            <RadzenCard class="m-3">
                <h3 class="h5">Contact</h3>
                <div class="d-flex flex-row">
                    <RadzenImage Path="@account.PhotoPath" Class="rounded-circle float-left mr-3" Style="width: 100px; height: 100px;" />
                    <div>
                        <div>Imię i nazwisko</div>
                        <b>@($"{account.Name} {account.Surname}")</b>
                        <b>@account.RangName.RangName</b>
                    </div>
                </div>
            </RadzenCard>
            <RadzenCard class="m-3">
                <h3 class="h5">Delivery Information</h3>
                <div class="row">
                    <div class="col-md-4">
                        <div>Country</div>
                        <b>hej</b>
                        <div class="mt-3">City</div>
                        <b>siej</b>
                    </div>
                    <div class="col-md-8">
                        <div>Ship name</div>
                        <b>co tam</b>
                        <div class="mt-3">Freight</div>
                        <b>siemson</b>
                    </div>
                </div>
            </RadzenCard>
        </div>
    </div>

@code {
    User account = new User
        {
            ID = 1,
            Name = "Sebastian",
            Surname = "Zellah",
            PhotoPath = "https://pbs.twimg.com/media/EtvfOFTWYAc3j1q.jpg",
            RangName = new Rang { RangID = 1, RangName = "Lekarz" }
        };
}
